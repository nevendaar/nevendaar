<p id="notice"><%= notice %></p>

<h1>News Notes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Brief</th>
      <th>Text</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_notes.each do |news_note| %>
      <tr>
        <td><%= news_note.title %></td>
        <td><%= news_note.brief %></td>
        <td><%= news_note.text %></td>
        <td><%= news_note.user %></td>
        <td><%= link_to 'Show', news_note %></td>
        <td><%= link_to 'Edit', edit_news_note_path(news_note) %></td>
        <td><%= link_to 'Destroy', news_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News Note', new_news_note_path %>
